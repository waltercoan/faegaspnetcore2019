@model IList<empresaapp.Models.Client>

@{
    ViewData["Title"] = "Clientes"; 
}
<h2>Index</h2>
@Html.ActionLink("Novo","Form","Client",null, new {@class = "btn btn-primary"})

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Endere√ßo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@Html.ActionLink("Alterar","Edit","Client",
                     new {id=item.Id} ,new {@class = "btn btn-primary"})
                </td>
            </tr>
        }
    </tbody>
</table>